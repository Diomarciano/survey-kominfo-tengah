          </tr>
          <tr>
            <th>Kecamatan</th>
            <td><%= survey_form.kecamatan %></td>
          </tr>
          <tr>
            <th >Kelurahan</th>
            <td><%= survey_form.kelurahan %></td>
          </tr>
          <tr>
            <th >Alamat</th>
            <td><%= survey_form.alamat %></td>
          </tr>
          
          <tr>
            <th>Nama Lokasi</th>
            <td><%= survey_form.nama_lokasi %></td>
          </tr>
          <tr>
            <th>Surveyor</th>
            <td><%= survey_form.surveyor %></td>
          </tr>
          <tr>
