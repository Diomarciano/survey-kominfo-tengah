  <style>
    body {
      background-color: #ccffff;
    }
    @media print {
    .no_print { 
        display: none; 
    }
}
  </style>

<p id="notice"><%= notice %></p>

<center><h1>Data Survey Wilayah Tengah</h1></center>
<br />
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag survey_forms_path, class: "no_print", :method => 'get' do %>
      <select class="selectpicker form-control" data-show-subtext="true" data-live-search="true" name="search" id="search">
              <option disabled selected>Pilih Provinsi</option>
              <option>Gorontalo</option>
              <option>Kalimantan Barat</option>
              <option>Kalimantan Selatan</option>
              <option>Kalimantan Timur</option>
              <option>Kalimantan Utara</option>
              <option>Nusa Tenggara Timur</option>
              <option>Nusa Tenggara Barat</option>
              <option>Sulawesi Tengah</option>
              <option>Sulawesi Tenggara</option>
      </select>
      <br /><br />
      <center><%= submit_tag "Search", class: "btn btn-success"%></center>
    <% end %>
  </div>
  <br /><br />
 
<div class="container-fluid">
<div class="col-md-12">
  <% if current_user %>
  <p class="no_print">
    Download Data:<br />
    <button class="btn btn-sm btn-danger" onclick="myFunction()">Print PDF</button>
  </p>
  <% end %>
  <div class="table-responsive">
    <table class="table" width="100%">
        <% @survey_forms.each do |survey_form| %>
          <tr>
            <th width="50%">Site ID</th>
            <td width="50%"><%= survey_form.side_id %></td>
          </tr>
          <tr>
            <th>Nama Site</th>
            <td><%= survey_form.nama_site_id %></td>
          </tr>
          <tr>
