    .no_print { 
        display: none; 
    }
}
  </style>

<p id="notice"><%= notice %></p>

<center><h1>Data Survey Wilayah Barat</h1></center>
<br />
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag form_barats_path, class: "no_print", :method => 'get' do %>
      <select class="selectpicker form-control" data-show-subtext="true" data-live-search="true" name="search" id="search">
              <option disabled selected>Select Provinsi</option>
              <option>Aceh Besar</option>
              <option>Aceh Singkil</option>
              <option>Nias</option>
              <option>Nias Selatan</option>
              <option>Kepulauan Meranti</option>
              <option>Natuna</option>
              <option>Bintan</option>
              <option>Pasaman Barat</option>
              <option>Solok Selatan</option>
              <option>Bengkulu Utara</option>
              <option>Seluma</option>
              <option>Musi Rawas</option>
              <option>Musi Rawas Utara</option>
              <option>Pesisir Barat</option>
              <option>Lebak</option>
              <option>Pandeglang</option>
              <option>Bondowoso</option>
      </select>
      <br /><br />
      <center><%= submit_tag "Search", class: "btn btn-success"%></center>
    <% end %>
  </div>
  <br /><br />
 
<div class="container-fluid">
<div class="col-md-12">
  <p class="no_print">
    Download Data:<br />
    <button class="btn btn-sm btn-danger" onclick="myFunction()">Print PDF</button>
    
  </p>
  <div class="table-responsive">
    <table class="table">
        <% @form_barats.each do |form_barat| %>
          <tr>
            <th >Side ID</th>
