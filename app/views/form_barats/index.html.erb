          </tr>
          <tr>
            <th >Alamat</th>
            <td><%= form_barat.alamat %></td>
          </tr>
          <tr>
            <th>Provinsi</th>
            <td><%= form_barat.provinsi %></td>
          </tr>
          <tr>
            <th>Kabupaten</th>
            <td><%= form_barat.kabupaten %></td>
          </tr>
          
          <tr>
            <th>Surveyor</th>
            <td><%= form_barat.surveyor %></td>
          </tr>
          <tr>
            <th>Project</th>
            <td><%= form_barat.project %></td>
          </tr>
          <tr>
            <th>Lattide</th>
            <td><%= form_barat.lattide %></td>
          </tr>
          <tr>
            <th>Longitude</th>
            <td><%= form_barat.longitude %></td>
          </tr>
          <tr>
            <th>Sumber listrik</th>
            <td><%= form_barat.sumber_listrik %></td>
          </tr>
          <tr>
            <th>Jam operasional</th>
            <td><%= form_barat.jam_operasional %></td>
          </tr>
          <tr>
            <th>Id pelanggan listrik</th>
            <td><%= form_barat.id_pelanggan_listrik %></td>
          </tr>
          <tr>
            <th>Kapasitas</th>
            <td><%= form_barat.kapasitas %></td>
          </tr>
          <tr>
            <th>Jenis Koneksi Internet Eksisting</th>
            <td><%= form_barat.jenis_koneksi %></td>
          </tr>
          <tr>
            <th>Koneksi Internet Lainnya</th>
            <td><%= form_barat.lainnya_internet %></td>
          </tr>
          <tr>
