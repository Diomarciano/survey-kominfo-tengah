          </tr>
          <tr>
            <th>Kontak penanggung jawab lokasi 2</th>
            <td><%= form_barat.kontak_penanggung_jawab_lokasi_2 %></td>
          </tr>
          <tr>
            <th>Transportasi menuju lokasi</th>
            <td><%= form_barat.transportasi_menuju_lokasi %></td>
          </tr>
          <tr>
            <th>Gambaran menuju lokasi</th>
            <td><%= form_barat.gambaran_menuju_lokasi %></td>
          </tr>
          <tr>
            <th>Catatan Tambahan</th>
            <td><%= form_barat.catatan_tambahan %></td>
          </tr>
          <tr class="no_print">
            <th>Action</th>
            <td><%= link_to 'Show', form_barat %> | <%= link_to 'Edit', edit_form_barat_path(form_barat) %> | <%= link_to 'Destroy', form_barat, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
