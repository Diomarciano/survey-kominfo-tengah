          <tr class="no_print">
            <th>Photo</th>
            <td><%= link_to 'Data Photo', form_barat, class: "btn btn-sm btn-success" %></td>
          </tr> 
          <tr>
            <th colspan="2"></th>
          </tr>     
        <% end %>
    </table>
  </div>
</div>
</div>

